<configuration>
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>[%level] %c - %msg%n</Pattern>
    </layout>
  </appender>
  
  <logger name="info.freelibrary.sodbox" level="ERROR"/>
  <logger name="org.mortbay.log" level="ERROR"/> 
  <logger name="info.freelibrary.util" level="ERROR"/> 
  
  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>